<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flight #<%= @flight.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flights" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @flight.flier %>
          <a href="/flights/<%= @flight.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit flight
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @flight.flier %>
          <a href="/delete_flight/<%= @flight.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete flight
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Flier
      </dt>
      <dd>
        <% if @flight.flier.present? %>
          <a href="/users/<%= @flight.flier_id %>">
            <%= @flight.flier.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Departure
      </dt>
      <dd>
        <%= @flight.departure %>
      </dd>

      <dt>
        Destination
      </dt>
      <dd>
        <%= @flight.destination %>
      </dd>

      <dt>
        Fifteen minute reminder sent
      </dt>
      <dd>
        <%= @flight.fifteen_minute_reminder_sent %>
      </dd>

      <dt>
        Five minute reminder sent
      </dt>
      <dd>
        <%= @flight.five_minute_reminder_sent %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

