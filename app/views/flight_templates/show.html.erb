<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flight #<%= @flight.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flights" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link flight start -->
      <div class="col">
        <a href="/flights/<%= @flight.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit flight
        </a>
      </div>
      <!-- Edit link flight end -->

      <!-- Delete link flight start -->
      <div class="col">
        <a href="/delete_flight/<%= @flight.id %>" class="btn btn-block btn-outline-secondary">
          Delete flight
        </a>
      </div>
      <!-- Delete link flight end -->
    </div>

    <dl>
      <dt>
        Flier
      </dt>
      <!-- Display flier_id start -->
      <dd>
        <%= @flight.flier_id %>
      </dd>
      <!-- Display flier_id end -->

      <dt>
        Departure
      </dt>
      <!-- Display departure start -->
      <dd>
        <%= @flight.departure %>
      </dd>
      <!-- Display departure end -->

      <dt>
        Destination
      </dt>
      <!-- Display destination start -->
      <dd>
        <%= @flight.destination %>
      </dd>
      <!-- Display destination end -->

      <dt>
        Fifteen minute reminder sent
      </dt>
      <!-- Display fifteen_minute_reminder_sent start -->
      <dd>
        <%= @flight.fifteen_minute_reminder_sent %>
      </dd>
      <!-- Display fifteen_minute_reminder_sent end -->

      <dt>
        Five minute reminder sent
      </dt>
      <!-- Display five_minute_reminder_sent start -->
      <dd>
        <%= @flight.five_minute_reminder_sent %>
      </dd>
      <!-- Display five_minute_reminder_sent end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@flight.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@flight.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
