<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flights
    </h1>

    <a href="/flights/new" class="btn btn-block btn-outline-secondary">
      Add a new flight
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Flier
        </th>

        <th>
          Departure
        </th>

        <th>
          Destination
        </th>

        <th>
          Fifteen minute reminder sent
        </th>

        <th>
          Five minute reminder sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <!-- Display flight.id start -->
        <td>
          <%= flight.id %>
        </td>
        <!-- Display flight.id end -->

        <!-- Display flight.flier_id start -->
        <td>
          <% if flight.flier.present? %>
            <a href="/users/<%= flight.flier.id %>">
              <%= flight.flier.email %>
            </a>
          <% end %>
        </td>
        <!-- Display flight.flier_id end -->

        <!-- Display flight.departure start -->
        <td>
          <%= flight.departure %>
        </td>
        <!-- Display flight.departure end -->

        <!-- Display flight.destination start -->
        <td>
          <%= flight.destination %>
        </td>
        <!-- Display flight.destination end -->

        <!-- Display flight.fifteen_minute_reminder_sent start -->
        <td>
          <%= flight.fifteen_minute_reminder_sent %>
        </td>
        <!-- Display flight.fifteen_minute_reminder_sent end -->

        <!-- Display flight.five_minute_reminder_sent start -->
        <td>
          <%= flight.five_minute_reminder_sent %>
        </td>
        <!-- Display flight.five_minute_reminder_sent end -->

        <!-- Display flight.created_at start -->
        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>
        <!-- Display flight.created_at end -->

        <!-- Display flight.updated_at start -->
        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>
        <!-- Display flight.updated_at end -->

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @flights, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
