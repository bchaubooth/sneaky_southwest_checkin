<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flights
    </h1>

    <a href="/flights/new" class="btn btn-block btn-outline-secondary">
      Add a new flight
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "flight_templates/flights_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Flier
        </th>

        <th>
          Departure
        </th>

        <th>
          Destination
        </th>

        <th>
          Fifteen minute reminder sent
        </th>

        <th>
          Five minute reminder sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <td>
          <%= flight.id %>
        </td>

        <td>
          <% if flight.flier.present? %>
            <a href="/users/<%= flight.flier.id %>">
              <%= flight.flier.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= flight.departure %>
        </td>

        <td>
          <%= flight.destination %>
        </td>

        <td>
          <%= flight.fifteen_minute_reminder_sent %>
        </td>

        <td>
          <%= flight.five_minute_reminder_sent %>
        </td>

        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @flights, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
