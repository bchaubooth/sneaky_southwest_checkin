<h1>
  Add a new flight
</h1>


<hr>

<form action="/create_flight" method="post">

  <input type="hidden" name="flier_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="departure">
      Departure
    </label>

    <input type="text" id="departure" name="departure" class="form-control">
  </div>

  <div class="form-group">
    <label for="destination">
      Destination
    </label>

    <input type="text" id="destination" name="destination" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="fifteen_minute_reminder_sent">
    <input id="fifteen_minute_reminder_sent" class="form-check-input" name="fifteen_minute_reminder_sent" type="checkbox">
    <label for="fifteen_minute_reminder_sent" class="form-check-label">
      Fifteen minute reminder sent
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="five_minute_reminder_sent">
    <input id="five_minute_reminder_sent" class="form-check-input" name="five_minute_reminder_sent" type="checkbox">
    <label for="five_minute_reminder_sent" class="form-check-label">
      Five minute reminder sent
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
